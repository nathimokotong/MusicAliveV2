<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:id="@+id/cardview"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/songnameID"
            android:lines="2"
            android:text="song to be displayed here"
            android:layout_margin="10dp"
            android:textSize="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/likeimage_24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/songnameID"
            android:layout_alignStart="@+id/songnameID"
            android:layout_marginStart="15dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtLikes"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="17dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_down_black_24dp"
            android:id="@+id/imageView2"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />

        <TextView
            android:text="TextView"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDisikes"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignStart="@+id/txtLikes" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_disabled"
            android:id="@+id/alubcover"
            android:layout_marginEnd="14dp"
            android:layout_alignBottom="@+id/txtDisikes"
            android:layout_alignEnd="@+id/songnameID" />

    </RelativeLayout>
</android.support.v7.widget.CardView>